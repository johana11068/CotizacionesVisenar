<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextView" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#6A1B9A</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Titulos">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#252525</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="TextViewDesc" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="TextInputEditText" >
        <item name="android:textColorHint">@color/colorFloating</item>
        <item name="colorControlNormal">@color/colorFloating</item>
        <item name="colorControlActivated">@color/colorFloating</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>